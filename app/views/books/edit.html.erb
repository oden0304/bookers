<div class="edit">
  <h1>Editing Book</h1>
  <%= form_with model:@book,method: :patch do |book| %>
    <h4>Title</h4>
    <%= book.text_field:title %>
    
    <h4>Body</h4>
    <%= book.text_area:body %><br>
    
    <%= book.submit "Update Book" %><br>
    
    <%= link_to "Show",book_path %>
    
    <%= link_to "Back",books_path %>
  <% end %>
</div>
