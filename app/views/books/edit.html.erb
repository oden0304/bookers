<h1>Editing Book</h1>
    
<% if @book.errors.any? %>
    <div class="validate">
            <h2><%= @book.errors.count %>errors prohibited this book from being saved:</h2>
        <ul>
            <% @book.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
        </ul>
    </div>  
    <%= form_with model:@book,method: :patch do |book| %>
    <div class="field">
        <div class="field-with-errors">
            <label class="label" for="book_title">Title</label>
        </div>
        <div class="field-with-errors">
            <%= book.text_field:title %>
        </div>
    </div>
    <h4>Body</h4>
    <div class="field">
        <div class="field-with-errors">
            <label class="label" for="book_body">Body</label>
        </div>
        <div class="field-with-errors">
            <%= book.text_area:body %>
        </div>
    </div>
     <%= book.submit "Update Book" %><br>
    
    <%= link_to "Show",book_path %>
    
    <%= link_to "Back",books_path %>
    <% end %>
<% else %>  
  <%= form_with model:@book,method: :patch do |book| %>
    <h4>Title</h4>
    <%= book.text_field:title %>
    
    <h4>Body</h4>
    <%= book.text_area:body %>
  
     <%= book.submit "Update Book" %><br>
    
    <%= link_to "Show",book_path %>
    
    <%= link_to "Back",books_path %>
    <% end %>
<% end %>