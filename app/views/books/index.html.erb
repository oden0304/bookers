<div class="index">
    <nav>
    <h1>Books</h1>
    <table>
        
        <thead>
            <tr>
                <th>title</th>
                <th>body</th>
                <th colspan = "3"></th>
            </tr>
        </thead>
        <tbody>
            <% @books.each do |book| %>
            <th>
                <%= book.title %>
            </th>
            <th>
                <%= book.body %>
            </th>
            
             <% end %>  
        </tbody>
    </table>
    </nav>
    
<h1>New book</h1>
<%= form_with model:@book do |book| %>

<h4>Title</h4>
<%= book.text_field:title %>

<h4>Body</h4>
<%= book.text_area:body %>

<%= book.submit "Create Book" %>
<% end %>
</div>