<div class="index">
    <h1>Books</h1>
    <nav>
    <table>
        
        <thead>
            <tr>
                <th>Title</th>
                <th>Body</th>
                <th colspan = "3"></th>
            </tr>
        </thead>
        <tbody>
            <% @books.each do |book| %>
            <tr>
                <td>
                    <%= book.title %>
                </td>
                <td>
                    <%= book.body %>
                </td>
                <td>
                    <span><%= link_to "Show",book_path(book.id) %></span>
                </td>
                <td>
                    <span><%= link_to "Edit",edit_book_path(book.id) %></span>
                </td>
                <td>
                    <span><%= link_to "Destroy",book_path(book),method: :delete, "data-confirm" => "本当に削除しますか？" %></span>
                </td>
            </tr>
        
             <% end %>  
        </tbody>
    </table>
    </nav>
    <h1>New book</h1>
    <div class="validate">
        <% if @book.errors.any? %>
            <%= @book.errors.count %>件のエラーが発生しました
                <ul>
                    <%= @book.errors.full_messages.each do |message| %>
                        <li><%= message %></li>
                    <% end %>
                </ul>
        <% end %>
    </div>
            
        
    
    
    
    <%= form_with model:@book do |book| %>
    
    <h4>Title</h4>
    <%= book.text_field:title %>
    
    <h4>Body</h4>
    <%= book.text_area:body %><br>
    
    <%= book.submit "Create Book" %>
    <% end %>
</div>