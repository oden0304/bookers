<h1>Books</h1>
    <nav>
    <table>
        
        <thead>
            <tr>
                <th>Title</th>
                <th>Body</th>
                <th colspan = "3"></th>
            </tr>
        </thead>
        <tbody>
            <% @books.each do |book| %>
            <tr>
                <td>
                    <%= book.title %>
                </td>
                <td>
                    <%= book.body %>
                </td>
                <td>
                    <span><%= link_to "Show",book_path(book.id) %></span>
                </td>
                <td>
                    <span><%= link_to "Edit",edit_book_path(book.id) %></span>
                </td>
                <td>
                    <span><%= link_to "Destroy",book_path(book),method: :delete, "data-confirm" => "本当に削除しますか？" %></span>
                </td>
            </tr>
        
             <% end %>  
        </tbody>
    </table>
    </nav>
    <h2>New book</h2>
        <% if @book.errors.any? %>
        <div class="validate">
            <h2><%= @book.errors.count %>errors prohibited this book from being saved:</h2>
                <ul>
                    <% @book.errors.full_messages.each do |message| %>
                        <li><%= message %></li>
                    <% end %>
                </ul>
        </div>
        <%= form_with model:@book do |book| %>
    <div class="field">
        <div class="field-with-errors">
            <label class="label" for="book_title">Title</label>
        </div>
        <div class="field-with-errors">
            <%= book.text_field:title %>
        </div>
    </div>
    <div class="field">
        <div class="field-with-errors">
            <label class="label" for="book_body">Body</label>
        </div>
        <div class="field-with-errors">
            <%= book.text_area:body %>
        </div>
    </div>
    <%= book.submit "Create Book" %>
    <% end %>
    <% else %>
    <%= form_with model:@book do |book| %>
    <div class="field">
        <div>
            <lavel class="label" for="book_title">Title</lavel>
        </div>
        <div>
            <%= book.text_field:title %>
        </div>
    </div>
    <div class="field">
        <div>
            <lavel class="label" for="book_body">Body</lavel>
        </div>
            <div>
                <%= book.text_area:body %><br>
            </div>
    </div>
    <%= book.submit "Create Book" %>
    <% end %>
    <% end %>
    